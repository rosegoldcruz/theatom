# Backend Environment Variables for Railway Deployment
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=https://theatom-frontend.vercel.app

# Blockchain Configuration
PRIVATE_KEY=your_private_key_here
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/your_alchemy_key
BASE_SEPOLIA_WSS_URL=wss://base-sepolia.g.alchemy.com/v2/your_alchemy_key
BASE_SEPOLIA_CONTRACT_ADDRESS=your_contract_address_here

# Supabase Configuration (Server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication
JWT_SECRET=atom_super_secure_jwt_secret_key_32_chars_minimum_length_required

# Encryption (for sensitive data)
ENCRYPTION_KEY=atom_encryption_key_32_chars_min

# Database (if using separate database)
DATABASE_URL=postgresql://postgres:atompassword123@localhost:5432/atom_db

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Trading Configuration
MAX_GAS_PRICE_GWEI=50
MIN_PROFIT_THRESHOLD=0.01
MAX_TRADE_AMOUNT_ETH=1.0
MAX_GAS_COST_USD=20
ETH_PRICE_USD=3000
ALLOW_MAINNET=false

# Monitoring
SENTRY_DSN=https://demo@sentry.io/1234567

# Redis (if using for caching)
REDIS_URL=redis://localhost:6379
